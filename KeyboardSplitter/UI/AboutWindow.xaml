<UI:CustomWindow x:Class="KeyboardSplitter.UI.AboutWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:UI="clr-namespace:KeyboardSplitter.UI"
                 Height="320" Width="430"
                 IsToolWindow="True">
    <Grid>
        <TextBox Name="textBox" IsReadOnly="True">
            <TextBox.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#00EB00FF" Offset="0" />
                    <GradientStop Color="White" Offset="1" />
                </LinearGradientBrush>
            </TextBox.Background>
        </TextBox>
    </Grid>
</UI:CustomWindow>
